#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# INITIALIZE AND STORE SETTINGS
#=================================================

ynh_app_setting_set --app=$app --key=domain --value=$domain
ynh_app_setting_set --app=$app --key=path --value=$path

#=================================================
# INSTALL DEPENDENCIES
#=================================================

ynh_install_app_dependencies $pkg_dependencies

#=================================================
# CREATE DIRECTORIES
#=================================================

mkdir -p "$install_dir/uploads/books"
mkdir -p "$install_dir/uploads/covers"
mkdir -p "$install_dir/templates"

#=================================================
# COPY APPLICATION FILES
#=================================================

# YunoHost extracts repo to a subdirectory, so we need to find it
app_src=$(find "$YNH_APP_BASEDIR" -name "app.py" -type f | head -1 | xargs dirname)

if [ -z "$app_src" ] || [ ! -f "$app_src/app.py" ]; then
    ynh_die --message="Could not find app.py in extracted source"
fi

cp "$app_src/app.py" "$install_dir/"
cp "$app_src/requirements.txt" "$install_dir/"
cp -r "$app_src/templates"/* "$install_dir/templates/"

#=================================================
# SET PERMISSIONS
#=================================================

chmod 750 "$install_dir"
chmod -R o-rwx "$install_dir"
chown -R $app:www-data "$install_dir"
chmod -R 770 "$install_dir/uploads"

#=================================================
# PYTHON VIRTUALENV
#=================================================

python3 -m venv "$install_dir/venv"
"$install_dir/venv/bin/pip" install --upgrade pip
"$install_dir/venv/bin/pip" install -r "$install_dir/requirements.txt"

#=================================================
# UPDATE SECRET KEY
#=================================================

secret_key=$(ynh_string_random --length=50)
ynh_replace_string --match_string="your-super-secret-key-change-this-1234567890" \
    --replace_string="$secret_key" --target_file="$install_dir/app.py"
ynh_app_setting_set --app=$app --key=secret_key --value=$secret_key

#=================================================
# SETUP SYSTEMD
#=================================================

ynh_add_systemd_config

#=================================================
# ADD NGINX CONFIGURATION
#=================================================

ynh_add_nginx_config

#=================================================
# INTEGRATE SERVICE IN YUNOHOST
#=================================================

yunohost service add $app --description="Academic Library Service"

#=================================================
# START SYSTEMD SERVICE
#=================================================

ynh_systemd_action --service_name=$app --action="start" --log_path="/var/log/$app/$app.log"

#=================================================
# RELOAD NGINX
#=================================================

ynh_systemd_action --service_name=nginx --action=reload
ENDOFFILE

chmod +x scripts/install

git add scripts/install
git commit -m "Fix file paths - auto-detect source directory"
git push
